<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/gridLayout1"
            android:orientation="vertical" >
            <ImageButton
                android:id="@+id/StartButton1"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:src="@drawable/startbutton01" />
            <ImageButton
                android:id="@+id/StayButton1"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_gravity="center"
                android:src="@drawable/staybutton01" />
            <ImageButton
                android:id="@+id/ReturnButton1"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:src="@drawable/returnbutton01" />
            <ScrollView
                android:id="@+id/scrollView1"
                android:layout_width="match_parent"
                android:layout_height="51dp" >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >
                    <Button
                        android:id="@+id/button1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="MUSIC A" />
                    <Button
                        android:id="@+id/button2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="MUSIC B" />
                    <Button
                        android:id="@+id/button3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="MUSIC C" />
                </LinearLayout>
            </ScrollView>
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/speaker01" />
        </LinearLayout>
            <GridLayout
                android:id="@+id/gridLayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:columnCount="4"
                android:rowCount="4" >
                <FrameLayout 
                    android:layout_gravity="center"
                    android:background="@drawable/button_back" >
                    <Button
                        android:id="@+id/num_button1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center" />
                </FrameLayout>
                <FrameLayout
                    android:layout_gravity="center"
                    android:background="@drawable/button_back" >
                    <Button
                        android:id="@+id/ride01_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center" />
                </FrameLayout>
                <FrameLayout
                    android:layout_gravity="center"
                    android:background="@drawable/button_back" >
                    <Button
                        android:id="@+id/num_button3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center" />
                </FrameLayout>
                <FrameLayout
                    android:layout_gravity="center"
                    android:background="@drawable/button_back" >
                    <Button
                        android:id="@+id/num_button4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center" />
                </FrameLayout>
                <FrameLayout
                    android:layout_gravity="center"
                    android:background="@drawable/button_back" >
                    <Button
                        android:id="@+id/num_button5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center" />
                </FrameLayout>
                <FrameLayout
                    android:layout_gravity="center"
                    android:background="@drawable/button_back" >
                    <Button
                        android:id="@+id/bd01_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center" />
                </FrameLayout>
                <FrameLayout
                    android:layout_gravity="center"
                    android:background="@drawable/button_back" >
                    <Button
                        android:id="@+id/kick_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center" />
                </FrameLayout>
                <FrameLayout
                    android:layout_gravity="center"
                    android:background="@drawable/button_back" >
                    <Button
                        android:id="@+id/tom123_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center" />
                </FrameLayout>
                <FrameLayout
                    android:layout_gravity="center"
                    android:background="@drawable/button_back" >
                    <Button
                        android:id="@+id/num_button9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center" />
                </FrameLayout>
                <FrameLayout
                    android:layout_gravity="center"
                    android:background="@drawable/button_back" >
                    <Button
                        android:id="@+id/sn01_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center" />
                </FrameLayout>
                <FrameLayout
                    android:layout_gravity="center"
                    android:background="@drawable/button_back" >
                    <Button
                        android:id="@+id/sn02_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center" />
                </FrameLayout>
                <FrameLayout
                    android:layout_gravity="center"
                    android:background="@drawable/button_back" >
                    <Button
                        android:id="@+id/clach_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center" />
                </FrameLayout>
                <FrameLayout
                    android:layout_gravity="center"
                    android:background="@drawable/button_back" >
                    <Button
                        android:id="@+id/num_button13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center" />
                </FrameLayout>
                <FrameLayout
                    android:layout_gravity="center"
                    android:background="@drawable/button_back" >
                    <Button
                        android:id="@+id/num_button14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center" />
                </FrameLayout>
                <FrameLayout
                    android:layout_gravity="center"
                    android:background="@drawable/button_back" >
                    <Button
                        android:id="@+id/num_button15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center" />
                </FrameLayout>
                <FrameLayout
                    android:layout_gravity="center"
                    android:background="@drawable/button_back" >
                    <Button
                        android:id="@+id/clap_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center" />
                </FrameLayout>
            </GridLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/gridLayout1"
            android:orientation="vertical" >
            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/txtback01"
                android:text="ここにスコアを表示"
                android:textColor="#ffffffff" />
            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/txtback01"
                android:text="ここにコンボを表示"
                android:textColor="#ffffffff" />
            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/txtback01"
                android:text="ここにバリューを表示"
                android:textColor="#ffffffff" />
            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/speaker01" />
        </LinearLayout>
</RelativeLayout>